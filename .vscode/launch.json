{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Next.js App",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "args": ["dev", "--port", "5173"],
      "cwd": "${workspaceFolder}",
      "outFiles": ["${workspaceFolder}/.next/**/*.js"],
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["--inspect"]
    }
  ]
}
